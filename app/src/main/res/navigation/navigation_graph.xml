<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.esgi.fooders.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.esgi.fooders.HomeFragment"
        android:label="Accueil"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_scanFragment"
            app:destination="@id/scanFragment" />
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.esgi.fooders.ProfileFragment"
        android:label="Profil"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/historyFragment"
        android:name="com.esgi.fooders.HistoryFragment"
        android:label="Historique"
        tools:layout="@layout/fragment_history" />

    <fragment
        android:id="@+id/scanSuccessFragment"
        android:name="com.esgi.fooders.ScanSuccessFragment"
        android:label="fragment_scan_success"
        tools:layout="@layout/fragment_scan_success">

        <argument
            android:name="barcode"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/scanFragment"
        android:name="com.esgi.fooders.ScanFragment"
        android:label="Scan"
        tools:layout="@layout/fragment_scan">
        <action
            android:id="@+id/action_scanFragment_to_scanSuccessFragment"
            app:destination="@id/scanSuccessFragment" />
    </fragment>
</navigation>